<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="isauze.ma_super_appli_scolaire.validation_compte"
    android:background="@drawable/mulan_f">

    <LinearLayout
        android:id="@+id/v_validation_compte"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/v_texte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text=""
            android:padding="@dimen/interieur"
            android:layout_margin="@dimen/exterieur"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/v_exercices"
            android:layout_width="@dimen/b_largeur"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/b_exercices"
            android:padding="@dimen/interieur"
            android:layout_margin="@dimen/exterieur"
            />
        <Button
            android:id="@+id/v_accueil"
            android:layout_width="@dimen/b_largeur"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/b_accueil"
            android:padding="@dimen/interieur"
            android:layout_margin="@dimen/exterieur"
            />
    </LinearLayout>

</RelativeLayout>
